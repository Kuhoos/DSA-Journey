#include <iostream>
using namespace std;
void alternateswap(int arr[],int n){
    for(int i=0;i<n;i+=2){
        if(i+1<n){
            int temp=arr[i];
            arr[i]=arr[i+1];
            arr[i+1]=temp;
        }
    }
}
void printArray(int arr[],int n){
    for(int i=0;i<n;i++){
        cout<<arr[i]<<"\n";
    }
}
int main() {
    int n;
    int arr[1000];
   cout <<"Enter the size of the array:"<<endl;
   cin>>n;
   cout<<"Enter the elements of the array:"<<endl;
   for(int i=0;i<n;i++){
       cin>>arr[i];
   }
   cout<<"Before the swap array was:"<<endl;
   printArray(arr,n);
   alternateswap(arr,n);
   cout<<"Array after swap is:"<<endl;
   printArray(arr,n);
    return 0;
}
